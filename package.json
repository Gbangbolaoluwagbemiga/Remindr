{
  "name": "remindr",
  "version": "0.1.0",
  "description": "On-chain reminder system for wallet users - Deploy on Base and Celo",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:base:testnet": "hardhat run scripts/deploy.js --network baseSepolia",
    "deploy:base:mainnet": "hardhat run scripts/deploy.js --network base",
    "deploy:celo:testnet": "hardhat run scripts/deploy.js --network celoAlfajores",
    "deploy:celo:mainnet": "hardhat run scripts/deploy.js --network celo",
    "verify:base": "hardhat verify --network base",
    "verify:celo": "hardhat verify --network celo",
    "verify:base:testnet": "hardhat run scripts/verify.js --network baseSepolia",
    "verify:base:mainnet": "hardhat run scripts/verify-mainnet.js --network base",
    "verify:celo:testnet": "hardhat run scripts/verify-celo.js --network celoAlfajores",
    "verify:celo:mainnet": "hardhat run scripts/verify-celo-mainnet.js --network celo",
    "random:celo": "HARDHAT_DISABLE_TELEMETRY=1 hardhat run scripts/random-writer.js --network celo"
  },
  "keywords": [
    "web3",
    "reminder",
    "blockchain",
    "base",
    "celo",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
